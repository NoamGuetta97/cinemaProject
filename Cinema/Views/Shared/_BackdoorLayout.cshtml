<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MironCinema - Logowanie</title>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <link rel="stylesheet" href="@Url.Content("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")">
    <script src="@Url.Content("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")"></script>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/panel.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/googlemapapistyle.css")">
    <script src="~/Scripts/geolocationvalidation.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row" style="padding-top:50px">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
                <div class="list-group list-group-horizontal">
                    <a href="@Url.Action("Index","Home")" class="list-group-item active">Podgląd</a>
                    <a href="@Url.Action("Index","CinemaPlaces")" class="list-group-item">Kina</a>
                    <a href="@Url.Action("Index","Movies")" class="list-group-item">Filmy</a>
                    <a href="@Url.Action("Index","Genres")" class="list-group-item">Kategorie</a>
                    <a href="@Url.Action("Index","Repertoire")" class="list-group-item">Repertuar</a>
                    <a href="@Url.Action("Index","Banners")" class="list-group-item">Banery</a>
                    <a href="@Url.Action("Index","Events")" class="list-group-item">Wydarzenia</a>
                    <a href="@Url.Action("Index","News")" class="list-group-item">Nowości</a>
                    <a href="@Url.Action("Index","Home")" class="list-group-item">Dodatkowe informacje</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="col-md-12 well">
            @RenderBody()
        </div>
    </div>
</body>
</html>