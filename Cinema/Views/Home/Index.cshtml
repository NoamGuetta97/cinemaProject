                                    </div>
                                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                                        <p class="h3">@eventitem.Text</p>
                                    </div>
                                    <hr>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div id="news1" class="tab-pane fade">
                    <div class="posters">
