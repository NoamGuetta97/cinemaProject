                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                        <img class="img-center" src="@Url.Content(newsitem.ImagePath)">
                                    </div>
                                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                                        <p class="h3">@newsitem.Text</p>
                                    </div>
                                    <hr>
                                </div>
                            </div>
                        }
